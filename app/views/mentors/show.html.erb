
<div class="row">
  <div class="col s12 m12 l12 center">
    <% if @mentor.avatar.present? %>
      <%= image_tag @mentor.avatar, class: "circle responsive-img", id: "profile"%>
    <% else %>
      <%= image_tag 'avatar.png', class: "circle responsive-img", id: "profile"  %>
    <% end %>
  </div>
  <div class="col s12 m12 center">
    <div class="row">
      <h2><%= @mentor.name %></h2>
    </div>
  </div>

  <div class="col s12 m12">
    <div class="row">
      <ul class="collection with-header">
        <li class="collection-header"><h4>I am a mentor for the following <%= 'city'.pluralize(@mentor.schools.count) %>:</h4></li>
        <% @mentor.schools.each do |school| %>
        <li class="collection-item"><%= school.city %></li>
        <% end %>
      </ul>
    </div>
  </div>

</div>
