<div class="container">
  <p id="notice">
    <% if notice %>
      <script type="text/javascript">
        Materialize.toast('<%= notice %>', 3000)
      </script>
    <% end %>
  </p>
  <div class="row center">
    <h2>Great Success!</h2>
  </div>
  <div class="row center">
    <%= image_tag @gif.sample, id: 'gif' %>
  </div>
  <div class="row center">
    <h3>Only 2 More Steps:</h3>
  </div>

<div class="divider"></div>
  <div class="row center">
    <h3>1) Select Your Campus</h3>
  </div>
  <div class="row">
    <div class="col l3"></div>
    <div class="col s12 m12 l6">
      <%= simple_form_for(@user, remote: true) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.association :school, label: "Campus", prompt: "Select Your Campus", label_method: :city %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
    <div class="col l3"></div>
  </div>

<div class="divider"></div>
  <div class="row center">
    <h3>2) Sign Up for the Slack Channel</h3>
