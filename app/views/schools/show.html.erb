
<h1>All Things <%= @school.city %></h1>

<div class="row">
  <div class="col s12 l6">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Users Not on Teams</h4></li>
      <% @school.users.where(team_id: nil).each do |user| %>
      <li class="collection-item"><%= link_to user.name, user, class: "btn" %></li>
      <% end %>
    </ul>
  </div>
  <div class="col s12 l6">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Mentors for <%= @school.city %></h4></li>
      <% @school.mentors.each do |user| %>
      <li class="collection-item"><%= mail_to user.email, user.name, class: "btn" %></li>
      <% end %>
    </ul>
  </div>
</div>
