<%= simple_form_for(user) do |f| %>
  <%= f.error_notification %>
<div class="row">
  <h3>Register Here!</h3>
</div>
<div class="row">
  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.association :school, label: 'Campus', label_method: :city %>
  </div>
</div>
  <div class="row">
    <div class="form-actions">
      <%= f.button :submit, 'Submit' %>
    </div>
  </div>
<% end %>
